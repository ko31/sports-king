{
    "name": "tarosky/sports-king",
    "description": "Library for WordPress sports site.",
    "type": "libary",
    "scripts": {
        "lint": [
            "phpcs --standard=phpcs.ruleset.xml $(find ./src -name '*.php')"
        ],
        "fix": [
			"phpcbf --standard=phpcs.ruleset.xml $(find ./src -name '*.php')"
		],
        "analyze": "phpstan analyze --memory-limit=1G"
    },
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Tarosky INC.",
            "email": "hi@tarosky.co.jp"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3.1",
        "wp-coding-standards/wpcs": "^2.0",
		"phpcompatibility/php-compatibility": "^9.3",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpstan/phpstan": "^1.11",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "phpstan/extension-installer": "^1.4"
	},
    "autoload": {
        "psr-4": {
            "Tarosky\\Common\\": "./src"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
